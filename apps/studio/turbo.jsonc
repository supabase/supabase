{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        // Build-time configuration
        "ANALYZE",
        "MAINTENANCE_MODE",
        "NODE_ENV",
        "VERCEL",
        "VERCEL_ENV",
        "FORCE_ASSET_CDN",
        "SITE_NAME",

        // Needed during build time in order to generate the CSP
        "NIMBUS_PROD_PROJECTS_URL",
        "NIMBUS_PROD_PROJECTS_URL_WS",
        "VERCEL_URL",
        "SUPABASE_URL",

        // Client-side public vars (embedded in bundle)
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_AUTH_DEBUG_KEY",
        "NEXT_PUBLIC_AUTH_DETECT_SESSION_IN_URL",
        "NEXT_PUBLIC_AUTH_NAVIGATOR_LOCK_KEY",
        "NEXT_PUBLIC_BASE_PATH",
        "NEXT_PUBLIC_CONFIGCAT_PROXY_URL",
        "NEXT_PUBLIC_CONFIGCAT_SDK_KEY",
        "NEXT_PUBLIC_CONTENT_API_URL",
        "NEXT_PUBLIC_DOCS_URL",
        "NEXT_PUBLIC_ENVIRONMENT",
        "NEXT_PUBLIC_GOOGLE_MAPS_KEY",
        "NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID",
        "NEXT_PUBLIC_GOTRUE_URL",
        "NEXT_PUBLIC_HCAPTCHA_SITE_KEY",
        "NEXT_PUBLIC_IS_NIMBUS",
        "NEXT_PUBLIC_IS_PLATFORM",
        "NEXT_PUBLIC_MCP_URL",
        "NEXT_PUBLIC_NODE_ENV",
        "NEXT_PUBLIC_ONGOING_INCIDENT",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_STORAGE_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLIC_KEY",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPPORT_ANON_KEY",
        "NEXT_PUBLIC_SUPPORT_API_URL",
        "NEXT_PUBLIC_USERCENTRICS_RULESET_ID",
        "NEXT_PUBLIC_VERCEL_BRANCH_URL",
        "NEXT_PUBLIC_VERCEL_ENV"
      ],
      "passThroughEnv": [
        // Git/deployment metadata
        "CURRENT_CLI_VERSION",
        "VERCEL_GIT_COMMIT_SHA",
        "SNIPPETS_MANAGEMENT_FOLDER",

        // Database configuration
        "PLATFORM_PG_META_URL",
        "STUDIO_PG_META_URL",
        "PG_META_CRYPTO_KEY",
        "POSTGRES_DB",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PORT",
        "POSTGRES_USER_READ_ONLY",
        "POSTGRES_USER_READ_WRITE",

        // Supabase configuration
        "SUPABASE_ANON_KEY",
        "SUPABASE_PUBLIC_URL",
        "SUPABASE_SERVICE_KEY",

        // Default names
        "DEFAULT_ORGANIZATION_NAME",
        "DEFAULT_PROJECT_NAME",

        // Authentication
        "AUTH_JWT_SECRET",

        // AI services
        "OPENAI_API_KEY",
        "BRAINTRUST_API_KEY", // needed by a Github Action
        "BRAINTRUST_PROJECT_ID",

        // AWS
        "AWS_ACCESS_KEY_ID",
        "AWS_BEDROCK_PROFILE",
        "AWS_BEDROCK_ROLE_ARN",
        "AWS_SECRET_ACCESS_KEY",

        // Asset CDN
        "ASSET_CDN_S3_ENDPOINT",

        // Logflare
        "LOGFLARE_API_KEY",
        "LOGFLARE_PRIVATE_ACCESS_KEY",
        "LOGFLARE_PRIVATE_ACCESS_TOKEN",
        "LOGFLARE_PUBLIC_ACCESS_TOKEN",
        "LOGFLARE_URL",

        // Sentry
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "NEXT_RUNTIME",

        // Support
        "SUPPORT_SUPABASE_SECRET_KEY",

        // Statuspage
        "STATUSPAGE_API_KEY",
        "STATUSPAGE_PAGE_ID",

        // Throttling
        "IS_THROTTLED"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
